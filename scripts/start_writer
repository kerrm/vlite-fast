#!/bin/bash
#set -x
# run as root
# arguments should be
# $1 = interface
# $2 = writer port
# $3 = info port
# $4 = baseband dada key
PACKAGE_DIR=/home/vlite-master/mtk
${PACKAGE_DIR}/vlite-fast/scripts/start_dada ${4} 257638400 32
${PACKAGE_DIR}/bin/writer -e ${1} -p ${2} -i ${3} -k ${4} -o
# allow some time for buffer to empty before killing it
wait $(pgrep process_baseband)
sleep 1
${PACKAGE_DIR}/bin/dada_db -k ${4} -d
